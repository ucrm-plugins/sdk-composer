{
    "name": "ucrm-plugins/sdk-composer",
    "keywords": [
        "ucrm",
        "unms",
        "uisp",
        "plugins",
        "composer"
    ],
    "description": "A collection of Composer plugins and scripts for UCRM Plugin development.",
    "homepage": "https://github.com/ucrm-plugins/sdk-composer",
    "license": "MIT",
    "type": "composer-plugin",
    "authors": [
        {
            "name": "Ryan Spaeth",
            "email": "rspaeth@spaethtech.com"
        }
    ],
    "require": {
        "php": "^7.3.27",
        "ext-json": "*",
        "ext-simplexml": "*",
        "composer-plugin-api": "^2",
        "composer/composer": "^2"
    },
    "require-dev": {
        "franzl/studio": "^0.16.0"
    },
    "autoload": {
        "psr-4": {
            "UCRM\\SDK\\Composer\\": "src/"
        }
    },
    "extra": {
        "class": "UCRM\\SDK\\Composer\\Plugins\\Plugin"
    },
    "config": {
        "allow-plugins": {
            "franzl/studio": true
        }
    }
}
